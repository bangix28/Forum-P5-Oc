    <div class="container">
        <h1>Changez votre {{ name }}</h1>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="form"> Changez votre  {{ name }} </label>
                    <input class="form-control" type="{{ type }}" id="form" name="form">
                <label for="password">Confirmez votre mot de passe</label>
                <input class="form-control" type="password" id="password" name="password">
                <input type="text" name="token" hidden value="{{ session.token }}">
                <button type="submit" class="btn btn-success rounded" name="submit">Modifier</button>
                {% if message is not null %}<p class="text-center text-danger">{{ message }}</p> {% endif %}
            </div>
        </form>
    </div>



