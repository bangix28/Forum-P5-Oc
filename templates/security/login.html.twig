
<div class="dropdown">
    <button class="btn navbar-dark dropdown-toggle mr-5 rounded" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Se connecter
    </button><div class="dropdown-menu">
    <form class="px-2 py-1" method="post" action="index.php?access=security!login">
        <div class="form-group">
            <label for="email">Adresse email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="email@example.com">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Mot de passe">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="dropdownCheck">
            <label class="form-check-label" for="dropdownCheck">
                Se souvenir de moi
            </label>
        </div>
        <button type="submit" name="submit" class="btn btn-primary rounded mt-2">Se connecter</button>
        {% if session.message is not null  %}
            <div class="text-danger mt-3">
                {% if session.message is iterable %}
                    <p> Le mot de passe doit avoir :</p>
                    <ul class="list-group">
                        {% for m in session.message %}
                            <li style="list-style: none;" class="mt-1">{{ m }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    {{ session.message }}
                {% endif %}
            </div>
        {% endif %}
    </form>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" href="index.php?access=security!register">Nouveau ici ? Inscris-toi</a>
    <a class="dropdown-item" href="#">Mot de passe perdu ?</a>
</div>
</div>
