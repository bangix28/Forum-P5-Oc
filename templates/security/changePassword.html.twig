{% extends 'base.html.twig' %}

{% block title %} Changez votre mot de passe {% endblock %}
{% block style %} <link href="//netdna.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1 class="text-center p-5">Changez Votre mot de passe</h1>
            </div>
        </div>
        <div>
            <div class="offset-3 col-6 ">
                <p class="text-center">Utilisez le formulaire ci-dessous pour changer votre mot de passe. Votre mot de passe ne peut pas être le même que votre nom d'utilisateur.</p>
                <form method="post" id="passwordForm">
                    {{ include('include/password.html.twig') }}
                        <button type="submit" name="submit" class="col-xs-12 btn btn-primary btn-load btn-lg"> Changer le mot de passe !</button>
                </form>
            </div><!--/col-sm-6-->
        </div><!--/row-->
    </div>
{% endblock %}

{% block javascripts %}
    <script src="assets/js/password.js"></script>
{% endblock %}
