{% extends 'base.html.twig' %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-10">

            <!-- Title -->
            <h1 class="mt-4">{{ post.title }}</h1>

            <!-- Author -->
                <p class="lead">
                  par {{ post.user.firstName }} {{ post.user.lastName }}
                </p>
            {% if session.id is same as(post.user.id) %}
            <button class="btn navbar-dark dropdown-toggle mr-5 rounded float-right" type="button" id="dropdownMenu2"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                <i class="fas fa-ellipsis-v"></i>
            </button>
            <div class="dropdown-menu">
                <div class="px-3 py-2">
                    <ul class="list-group list-unstyled">
                        <li class="nav-item active">
                            <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette article ?');"
                               href="index.php?access=post!delete&amp;id={{ post.id }}">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a href="index.php?access=post!edit&amp;id={{ post.id }}"><p>Modifier</p></a>
                        </li>
                    </ul>
                </div>
            </div>
            {% endif %}
            <hr>

            <!-- Date/Time -->
            <p>posté le {{ post.createdAt|date('d/m/y') }} à {{ post.createdAt|date('H:i') }}</p>

            <hr>

            <!-- Preview Image -->
            <img class="img-fluid rounded" style="width: 100%" src="assets/img/upload/{{ post.thumbnail }}" alt="photo de l'article ">

            <hr>
            <p>{{ post.content |raw }}</p>
            <hr>

            <!-- Comments Form -->
            <div class="card my-4">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">
                    <form method="post" action="index.php?access=comment!create">
                        <div class="form-group">
                            <textarea class="form-control" name="content" rows="3"></textarea>
                            <input name="post" hidden value="{{ post.id }}">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>

            <!-- Single Comment -->
            {% for comment in post.comments %}
            <div class="media mb-4">
                <img class="d-flex mr-3 rounded-circle" src="assets/img/upload/{{ comment.user.image }}" style="max-width: 75px" alt="">
                <div class="media-body">
                    <div class="row">
                    <h5 class="p-2 mt-0">{{ comment.user.firstName }} {{ comment.user.lastName }} </h5>
                    <p class="p-2 small">Crée le {{ comment.createdAt|date('d/m/y')}} à {{ comment.createdAt|date('H:i') }} </p>
                    </div>
                    <p>{{ comment.content }}</p>
                </div>
            </div>
            {% endfor %}
    </div>
</div>
</div>
    {% endblock %}
