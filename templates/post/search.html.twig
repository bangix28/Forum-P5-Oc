{% extends 'base.html.twig' %}
{% block title %} Recherche d'article{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center p-5">Liste des articles !</h1>
        <div class="row">
            <p>Ici vous pouvez retrouvez tout les articles du site !</p>
            <div class="float-right">
                <form method="post" action="index.php?access=post!handleSearch">
                    <div class="form-group form-inline">
                        <input type="text" class="form-control" name="f" placeholder="search">
                        <button type="submit" class="btn btn-success rounded">Recherche</button>
                    </div>
                </form>
            </div>
        </div>
        <hr>
        <div class="row">
            {% for p in post %}
                <div class="mt-4 col-12 col-sm-8 col-md-6 col-lg-4">
                    <div class="card">
                        <img class="card-img" style="height: 250px;" src="assets/img/upload/{{ p.thumbnail }}" alt="image de l'article !">
                        <div class="card-img-overlay pointer-event">
                            <p class="btn btn-light btn-sm rounded">{{ p.user.firstName }} {{ p.user.lastName }}</p>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">{{ p.title }}</h4>
                            <p class="card-text">{{ p.content|striptags|slice(0,150) }}</p>
                            <a href="index.php?access=post!read&amp;id={{ p.id }}" class="stretched-link btn btn-dark">Lire l'article !</a>
                        </div>
                        <div class="card-footer text-muted d-flex justify-content-between bg-transparent border-top-0">
                            <div class="views">
                                {{ p.createdAt|date('d/m/y') }}
                            </div>
                            <div class="stats">
                                <i class="far fa-comment"></i> {{ p.comments |length }}
                            </div>

                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>
{% endblock %}
