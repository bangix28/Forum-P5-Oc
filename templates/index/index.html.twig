{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
    <div class="col-lg-12 bg-dark text-center" style="height: 850px;">
        <img src="/assets/img/ken.jpg" class="img-fluid rounded-circle mt-5 mb-5" alt="Photo de Kénolane Granger" style="min-height: 500px;">
        <h1 class="text-light">Kénolane Granger</h1>
        <h2 class="text-light">Développeur web Back-end</h2>
    </div>
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="text-center">Actualité!</h1>
            <p class="lead">Les derniere Actualité/Post de Kénolane Granger !</p>
            <hr class="my-4">
        </div>
            </div>
    {% for p in posts %}
            <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <div class="card">
                    <img class="card-img" src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/pasta.jpg" alt="Bologna">
                    <div class="card-img-overlay">
                        <a href="#" class="btn btn-light btn-sm">Cooking</a>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">{{ p.title }}</h4>
                        <p class="card-text">{{ p.content|slice(0,150) }}</p>
                        <a href="#" class="btn btn-info">Lire l'article</a>
                    </div>
                    <div class="card-footer text-muted d-flex justify-content-between bg-transparent border-top-0">
                        <div class="views">
                            {{ p.createdAt|date('d/m/y') }}
                        </div>
                        <div class="stats">
                            <i class="far fa-comment"></i> {{ p.comment|length }}
                        </div>

                    </div>
                </div>

            </div>
    {% endfor %}
{% endblock %}
